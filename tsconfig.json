{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2017",
        "moduleResolution": "NodeNext",
        "skipDefaultLibCheck": true,
        "importHelpers": true,
        "allowJs": true,
        "esModuleInterop": true,
        "noEmitOnError": true,
        "baseUrl": ".",
        "paths": {
            "tslib" : ["node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "test.js", "dist"]
}